{
  "env": {
    "browser": true,
    "webextensions": true,
    "node": true,
    "es2021": true,
    "jest/globals": true
  },
  "extends": ["eslint:recommended", "google"],
  "ignorePatterns": [
    "dist/**/*.js",
    "browser-profiles/**/*.js",
    "docs/**/*.js"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["import", "jest"],
  "rules": {
    "import/no-unresolved": 2,
    "import/no-commonjs": 2,
    "import/extensions": [2, "ignorePackages"],
    "no-restricted-globals": [2, "event"]
  }
}
