{
  "name": "easy-languages-dict",
  "version": "0.0.1",
  "type": "module",
  "description": "Browser extension which adds an interactive dictionary to subtitles of videos on the Easy Languages YouTube channels",
  "scripts": {
    "test": "jest --verbose",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "start": "rm -rf dist .parcel-cache && parcel watch manifest.json --host localhost --config @parcel/config-webextension",
    "build": "parcel build manifest.json --config @parcel/config-webextension"
  },
  "author": "R. N. West",
  "license": "GPL-2.0-or-later",
  "dependencies": {
    "tesseract.js": "^5.0.3"
  },
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.22.11",
    "@parcel/config-webextension": "^2.9.1",
    "eslint": "^8.48.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jest": "^27.4.2",
    "jest": "^29.6.4",
    "jest-environment-jsdom": "^29.6.4",
    "parcel": "^2.9.1",
    "process": "^0.11.10"
  }
}
